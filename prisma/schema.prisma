// prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  // Keep this if TS complains about `adapter: never`
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum DashboardStatus {
  DRAFT
  ACTIVE
}

enum DataSourceType {
  GOOGLE_SHEETS
  POSTGRES
  SHOPIFY
  GA4
  CSV
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts   Account[]
  sessions   Session[]
  dashboards Dashboard[]
}

model Dashboard {
  id          String          @id @default(cuid())
  userId      String
  name        String
  slug        String
  description String?
  status      DashboardStatus @default(DRAFT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  dataSources      DataSource[]
  dashboardLayouts DashboardLayout[]
  appRecords       AppRecord[]

  @@unique([userId, slug])
  @@index([userId])
}

model DataSource {
  id          String         @id @default(cuid())
  dashboardId String
  type        DataSourceType
  name        String
  config      Json
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  dashboard        Dashboard         @relation(fields: [dashboardId], references: [id], onDelete: Cascade)
  dashboardLayouts DashboardLayout[]

  @@index([dashboardId])
}

model DashboardLayout {
  id          String @id @default(cuid())
  dashboardId String
  sourceId    String

  version Int    @default(1)
  status  String @default("DRAFT") // DRAFT | ACTIVE later
  spec    Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dashboard  Dashboard   @relation(fields: [dashboardId], references: [id], onDelete: Cascade)
  source     DataSource  @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  appRecords AppRecord[]

  @@unique([dashboardId, version])
  @@index([dashboardId])
  @@index([sourceId])
}

model AppRecord {
  id          String @id @default(cuid())
  dashboardId String
  layoutId    String

  data      Json
  sourceRow Int? // original sheet row index (optional)
  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dashboard Dashboard       @relation(fields: [dashboardId], references: [id], onDelete: Cascade)
  layout    DashboardLayout @relation(fields: [layoutId], references: [id], onDelete: Cascade)

  @@unique([layoutId, sourceRow])
  @@index([dashboardId])
  @@index([layoutId])
  @@index([deletedAt])
}

/**
 * keep your Account/Session/VerificationToken models below
 */
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
